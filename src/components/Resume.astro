---
export interface Props {
    timeline: {
        year: string;
        title: string;
        badge: string[];
        description: string[];
    }[];
}

const { timeline } = Astro.props;
const secondToLastItems = timeline.splice(1);
---

<ul class="timeline timeline-vertical">
    <li>
        <div class="timeline-start font-bold text-lg text-secondary">
            {timeline[0].year}
        </div>
        <div class="timeline-middle">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="h-5 w-5 text-primary"
            >
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
            </svg>
        </div>
        <div
            class="timeline-end timeline-box p-5 bg-base-200 rounded-lg shadow-lg"
        >
            <h2 class="text-xl font-semibold text-accent">
                {timeline[0].title}
            </h2>
            <div class="flex flex-wrap gap-2 sm:flex-row flex-col">
                {
                    timeline[0].badge.map((item) => (
                        <div class="badge badge-soft badge-primary">{item}</div>
                    ))
                }
            </div>

            <ul class="list-disc m-2">
                {timeline[0].description.map((item) => <li>{item}</li>)}
            </ul>
        </div>
        <hr />
    </li>
    {
        secondToLastItems.map((item) => (
            <li>
                <hr />
                <div class="timeline-start font-bold text-lg text-secondary">
                    {item.year}
                </div>
                <div class="timeline-middle">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="h-5 w-5 text-primary"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                            clip-rule="evenodd"
                        />
                    </svg>
                </div>
                <div class="timeline-end timeline-box p-5 bg-base-200 rounded-lg shadow-lg">
                    <h2 class="text-xl font-semibold text-accent">
                        {item.title}
                    </h2>

                    <div class="flex flex-wrap gap-2 sm:flex-row flex-col">
                        {item.badge.map((item) => (
                            <div class="badge badge-soft badge-primary">
                                {item}
                            </div>
                        ))}
                    </div>

                    <ul class="list-disc m-2">
                        {item.description.map((item) => (
                            <li>{item}</li>
                        ))}
                    </ul>
                </div>
                <hr />
            </li>
        ))
    }
</ul>
